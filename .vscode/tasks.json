                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "type": "java", 
            "label": "Spring Boot: Run Local Profile",
            "mainClass": "com.example.azureappconfigdemo.AzureAppConfigDemoApplication",
            "projectName": "azure-app-config-demo",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=default",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]

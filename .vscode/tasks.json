            "label": "Spring Boot: Run Azure Profile",
            "mainClass": "com.example.azureappconfigdemo.AzureAppConfigDemoWithAzureApplication",
            "projectName": "azure-app-config-demo",
            "args": "",
            "vmArgs": "-Dspring.profiles.active=azure",
            "envFile": "${workspaceFolder}/.env",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
